<van-cell-group title="请选择日期">
  <van-field
    value="{{ currentDateStr }}"
    label="预约时间"
    icon="calender-o"
    bind:tap="onDateClick"
    size="large"
    disabled
  />
</van-cell-group>
<van-action-sheet show="{{ show }}" bind:close="onClose">
  <van-datetime-picker
    type="date"
    value="{{ currentDate }}"
    min-date="{{ minDate }}"
    max-date="{{ maxDate }}"
    formatter="{{ formatter }}"
    bind:cancel="onClose"
    bind:confirm="onDateConfirm"
  />
</van-action-sheet>

<block wx:for="{{orders}}"  wx:key="id" wx:for-index="index" wx:for-item="item">
<van-cell-group title="{{item.start}} - {{item.end}} 时段" wx:if="{{item.seatCount > 0}}">
  <block wx:for="{{item.room}}"  wx:key="id" wx:for-index="index2" wx:for-item="item2">
    <van-cell wx:for="{{item2.seats}}" wx:key="id" wx:for-index="idx" wx:for-item="itm">
      <view slot="icon" style="margin-right:16rpx">治疗室{{index2 + 1}}:</view>
      <image class="avatar" slot="icon" src="{{itm.avatar}}" />
      <view slot="title">
        {{itm.username}}
        <span style="color:blue" wx:if="{{itm.sex}}">(男)</span>
        <span style="color:red" wx:if="{{!itm.sex}}">(女)</span>
      </view>
      <view slot="right-icon">{{itm.phone}}</view>
    </van-cell>  
  </block>
  </van-cell-group>
</block>
<view wx:if="{{noOrder}}" style="margin:32rpx;">当天暂无预约</view>
<van-toast id="van-toast" />
