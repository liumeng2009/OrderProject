<van-cell-group title="用户列表">
  <block wx:for="{{users}}" wx:key="_id" wx:for-index="index" wx:for-item="item">
    <van-cell>
      <view slot="title">
        <van-row>
          <van-col span="4">
            <image src="{{item.avatar}}" class="avatar"></image>
          </van-col>
          <van-col span="20">
            <view class="username">{{item.nickname}}</view>
          </van-col>
        </van-row>
      </view>
      <van-checkbox slot="right-icon" style="padding: 20rpx 0rpx" bind:change="onIsAdminChange" data-userid="{{item._id}}" 
        value="{{ item.isAdmin }}"></van-checkbox>
    </van-cell>
  </block>
</van-cell-group>
<van-toast id="van-toast" />
