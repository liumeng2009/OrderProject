<van-cell-group title="请选择日期">
  <van-field
    value="{{ currentDateStr }}"
    label="预约时间"
    icon="calender-o"
    bind:tap="onDateClick"
    size="large"
    disabled
  />
</van-cell-group>

<van-cell-group title="请选择时间段" class="order-list">
  <van-cell wx:for="{{orders}}" wx:key="id" wx:for-index="index" wx:for-item="item" bind:click="onClick" 
    data-id="{{item.id}}"
    data-start="{{item.start}}"
    data-end="{{item.end}}"
    >
    <view slot="title">{{item.start}} - {{item.end}}</view>
    <block wx:for="{{item.seats}}" wx:key="id" wx:for-index="idx" wx:for-item="itm">
      <van-icon wx:if="{{itm.hasPeople}}" slot="right-icon" class="m-r-8 f-s-20" name="manager" color="#07c160" />
      <van-icon wx:if="{{!itm.hasPeople}}" slot="right-icon" class="m-r-8 f-s-20" name="manager-o" />
    </block>
  </van-cell>
</van-cell-group>

<van-action-sheet show="{{ show }}" bind:close="onClose">
  <van-datetime-picker
    type="date"
    value="{{ currentDate }}"
    min-date="{{ minDate }}"
    max-date="{{ maxDate }}"
    formatter="{{ formatter }}"
    bind:cancel="onClose"
    bind:confirm="onDateConfirm"
  />
</van-action-sheet>
<van-button 
  wx:if="{{isAdmin}}"
  icon="orders-o" type="primary" 
  class="float-button"
  bind:tap="onSettingClick"
  >
</van-button>
<van-toast id="van-toast" />
