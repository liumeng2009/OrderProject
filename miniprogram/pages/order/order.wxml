<van-cell-group title="请填写预约时间">
  <van-field
    value="{{ currentDateStr }}"
    required
    label="预约时间"
    icon="clock"
    bind:tap="onDateClick"
    size="large"
    disabled
  />
  <van-field
    value="{{ phone }}"
    required
    label="手机号"
    placeholder="请输入手机号"
    error-message="{{phoneErrorMessage}}"
    size="large"
    icon="phone"
    bind:blur="onPhoneBlur"
    bind:input="onPhoneInput"
  />
</van-cell-group>
<van-action-sheet show="{{ show }}" bind:close="onClose">
  <van-datetime-picker
    type="datetime"
    value="{{ currentDate }}"
    min-date="{{ minDate }}"
    max-date="{{ maxDate }}"
    bind:confirm="onDateConfirm"
    bind:cancel="onClose"
  />
</van-action-sheet>
<van-button 
  type="primary" 
  round 
  class="m8"
  loading="{{saving}}"
  loading-text="预约中..."
  open-type="getUserInfo"
  bindgetuserinfo="onGotUserInfo"
  >
  预约
</van-button>
<van-button 
  wx:if="{{isAdmin}}"
  type="primary" 
  round 
  class="m8"
  bind:tap="onUserManageClick"
  >
  用户管理
</van-button>
<van-toast id="van-toast" />
