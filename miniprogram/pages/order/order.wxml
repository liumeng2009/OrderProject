<van-cell-group title="请选择日期">
  <van-field
    value="{{ currentDateStr }}"
    label="预约时间"
    icon="calender-o"
    bind:tap="onDateClick"
    size="large"
    disabled
  />
</van-cell-group>
<van-action-sheet show="{{ show }}" bind:close="onClose">
  <van-datetime-picker
    type="date"
    value="{{ currentDate }}"
    min-date="{{ minDate }}"
    max-date="{{ maxDate }}"
    formatter="{{ formatter }}"
    bind:cancel="onClose"
  />
</van-action-sheet>
